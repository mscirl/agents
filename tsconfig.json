{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2022",
      "ESNext"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ]
}